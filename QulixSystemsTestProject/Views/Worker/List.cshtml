@model IEnumerable<QulixSystemsTestProject.Models.Worker>

@{
    ViewBag.Title = "Список сотрудников";
}

<h2>Список сотрудников</h2>
<p>
    @Html.ActionLink("Добавить", "Add");
</p>
<table align="left" border="1">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Дата приема </th>
        <th>Должность</th>
        <th>Компания</th>
        <th>Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem=>item.SurName)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
            <td>@Html.DisplayFor(modelItem => item.Date.Date)</td>
            <td>@Html.DisplayFor(modelItem => item.Position)</td>
            <td>@Html.DisplayFor(modelItem => item.CompanyID)</td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID })
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
